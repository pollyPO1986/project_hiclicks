extend layout/_layout_side_l.jade

mixin keeptb(sort,date,number,title)
	tr
		td.visible-xs
		td.hidden-xs=sort
		td=date
		td
			a.order_link(href="javascript:;", data-toggle="modal", data-target=".serial_number")=number
		td
			a(href="nav_product_saler.html")=title
		td
