extend layout/_layout_side_l.jade

mixin keeptb(date,img,title,state)
	tr
		td
			.checkbox
				label
					input(type='checkbox')
					i.fa.fa-check(aria-hidden='true')
		td=date
		td
			.keep_img
				a(href="nav_blog_detail.html",style=img)
		td
			a(href="nav_blog_detail.html")=title
		td
			a(href="members_blog_edit.html")
				i.fi.flaticon-draw
		td
			button.btn.btn-toggle.active(type='button', data-toggle='button', aria-pressed='true', autocomplete='off')
				.handle
		td
			p(class!=attributes.class)=state

block breadcrumb
	.col-xs-12
		ol.breadcrumb.text-right
			li
				a(href='index.html') HiClicks
			li
				a(href='javascript:;') 會員專區
			li
				a(href='javascript:;') 我的開箱文
			li.active 管理開箱文

block sidenav
	include include/_mem_sidebar.jade

