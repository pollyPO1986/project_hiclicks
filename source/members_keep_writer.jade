extend layout/_layout_side_l.jade

mixin keeptb(number,img,name)
	tr
		td
			.checkbox
				label
					input(type='checkbox')
					i.fa.fa-check(aria-hidden='true')
		td.hidden-xs=number
		td
			.keep_img
				a(href="nav_blog.html",style=img)
		td
			a(href="nav_blog.html")=name

block breadcrumb
	.col-xs-12
		ol.breadcrumb.text-right
			li
				a(href='index.html') HiClicks
			li
				a(href='javascript:;') 會員專區
			li
				a(href='javascript:;') 我的收藏管理
			li.active 收藏作者

block sidenav
	include include/_mem_sidebar.jade

block content
	h2(style='display:none;') HiClicks 會員專區
	.trans_content
		.trans_titlebar
			h1 收藏作者
		.bonus.keep
			button.btn.btn_cafe(type='submit')
				i.fa.fa-times
				|  取消收藏
			table.table.tablestyle.keep_tb.writer(data-toggle-column="first")
				thead
					tr
						th
							.checkbox
								label
									input(type='checkbox')
									i.fa.fa-check(aria-hidden='true')
						th.hidden-xs NO
						th 作者照片
						th 作者名稱
				tbody
					+keeptb('1','background-image:url(images/sale_photo.jpg);','背影殺手手癢養')
					+keeptb('2','background-image:url(images/sale_photo.jpg);','轉身耍帥就是率')
					+keeptb('3','background-image:url(images/sale_photo.jpg);','我被淘汰了這個世界真的好殘酷')
					+keeptb('4','background-image:url(images/sale_photo.jpg);','藍色大腳丫')
					+keeptb('5','background-image:url(images/sale_photo.jpg);','阿黛勒')
					+keeptb('6','background-image:url(images/sale_photo.jpg);','背影殺手手癢養')
					+keeptb('7','background-image:url(images/sale_photo.jpg);','背影殺手手癢養')
					+keeptb('8','background-image:url(images/sale_photo.jpg);','背影殺手手癢養')
					+keeptb('9','background-image:url(images/sale_photo.jpg);','背影殺手手癢養')
					+keeptb('10','background-image:url(images/sale_photo.jpg);','背影殺手手癢養')
		ul.pagebox
			li
				a.arrow(href='javascript:;')
					i.fa.fa-angle-double-left(aria-hidden='true')
			li
