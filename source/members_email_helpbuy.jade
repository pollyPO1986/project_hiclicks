extend layout/_layout_side_l.jade

mixin keeptb(date,author,title)
	tr
		//- td.hidden-lg.hidden-md
		td
			.checkbox
				label
					input(type='checkbox')
					i.fa.fa-check(aria-hidden='true')
		td=date
		td=author
		td
			a(href="members_email_helpbuy_feedback.html",class!=attributes.class)=title

block breadcrumb
	.col-xs-12
		ol.breadcrumb.text-right
			li
				a(href='index.html') HiClicks
			li
				a(href='javascript:;') 會員專區
			li
				a(href='javascript:;') 訊息信件匣
			li.active 我的詢價/我的報價

block sidenav
	include include/_mem_sidebar.jade

block content
	h2(style='display:none;') HiClicks 會員專區
	.trans_content
		.trans_titlebar
			h1 我的詢價/我的報價
		.bonus.keep
			.row
				.col-xs-5.col-md-4
					button.btn.btn_cafe(type='submit') 
						i.fa.fa-trash-o
						|  刪除
				.col-xs-7.col-md-4.col-md-offset-4
					.input-group
							input.form-control(type='text', aria-label='', placeholder='請輸入商品關鍵字')
							span.input-group-btn
								button.btn.btn_cafe(type='button') 搜尋
			table.table.tablestyle.keep_tb.helpbuy(data-toggle-column="first")
				thead
					tr
						//- th.hidden-lg.hidden-md
						th
							.checkbox
								label
									input(type='checkbox')
									i.fa.fa-check(aria-hidden='true')
						th 日期
						th 寄件者
						th 標題
				tbody
					+keeptb('2017-11-21','apple','您好~~我需要幫忙代購噹噹葡萄糖')(class="buy_ok active")
