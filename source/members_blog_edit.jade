extend layout/_layout_side_l.jade

block breadcrumb
	.col-xs-12
		ol.breadcrumb.text-right
			li
				a(href='index.html') HiClicks
			li
				a(href='javascript:;') 會員專區
			li
				a(href='javascript:;') 我的開箱文
			li.active 新增開箱文

block sidenav
	include include/_mem_sidebar.jade

block content
	h2(style='display:none;') HiClicks 會員專區
	.trans_content
		.trans_titlebar
			h1 新增開箱文
		hr
		form.form-horizontal.contact_form.saler_form.mt20
			.form-group
				label.col-sm-2.control-label(for='')
					span.red * 
					| 文章標題：
				.col-sm-10
					input.form-control(type='text', id='', name='')
			.form-group
				label.col-sm-2.control-label(for='file_up') 
					| 封面上傳：
				.col-sm-10
					.file-loading
						input#idback_up.file(name='idback_up[]', multiple='', type='file', data-language="zh-TW", data-show-preview="false", data-allowed-file-extensions='["jpg","jpeg"]')
					ul.contact_list.mt10.list-unstyled
						li.red *檔案大小：2MB以下
						li.red *檔案格式：jpg、jpeg
						li.red *建議尺寸：800 x 600px
			.form-group
				label.col-sm-2.control-label(for='') 
					span.red *
					| 編輯文章：
				.col-sm-10
					img.img-responsive(src='images/blog/textedit.jpg')
			.form-group
				.col-xs-6.col-md-offset-2.col-md-2
					button.btn.btn-block.btn_black(type='button') 儲存草稿
				.col-xs-6.col-md-8
					button.btn.btn-block.btn_black(type='submit') 發表文章
			