extend layout/_layout_side_l.jade

mixin keeptb(date,title)
	tr
		td
			.checkbox
				label
					input(type='checkbox',name='all',value='car')
					i.fa.fa-check(aria-hidden='true')
		td=date
		td
			a(href="members_email_textedit.html",class!=attributes.class)=title

